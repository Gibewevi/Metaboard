
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  user_id       Int     @id @default(autoincrement())
  user_email    String  @unique
  user_password String
}

model accounts {
  account_id                Int       @id @default(autoincrement())
  user_id                   Int
  strategy                  String
  devise                    String
  initiale_balance          Int
  current_balance           Int
  shared                    Boolean
  profit_and_loss           Decimal   @default(0)
  profit_and_loss_percent   Decimal   @default(0)
  orders                    Int       @default(0)
}

model orders {
  order_id       Int      @id @default(autoincrement())
  account_id     Int
  asset          String   @db.VarChar(255)
  type           String   @db.VarChar(255)
  open           Decimal
  close          Decimal
  closed_date    DateTime?
  profit         Decimal
  stop_loss      Decimal
  amount         Decimal
  profit_pourcent Decimal
}
